<div class="card text-white bg-secondary mb-3">
  <div class="card-header">
    <div class="row row-cols-2">
      <div class="col">
        <h2>{{title}}</h2>
      </div>
      <div class="col nameDate">
        <p>Posted by {{user.name}} on {{format_date date_created}}</p>
      </div>
    </div>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{content}}</p>
    </blockquote>
  </div>
  <div class="divBtn">
    <p>
      <button class="btn btn-primary writeComment">Comment</button>
    </p>
  </div>
</div>
<div class="newComment">
  <div class="card text-white bg-secondary mb-3 edit-post">
    <div class="card-body">
      <form class="new-comment-form">
          <div class="form-group">
              <label for="comment">Comment</label>
              <textarea class="form-control" id="comment" rows="3"></textarea>
          </div>
      </form>
    </div>
    <div class="divBtn">
      <p>
          <button type="submit" class="btn btn-sm btn-danger saveComment" post-id="{{id}}">Submit</button>
      </p>
    </div>
  </div>
</div>
{{#if comments.length}}
<!-- Loop over each object in the posts array -->
{{#each comments as |comment| }}
<div class="card text-white bg-secondary mb-3 comments">
  <div class="card-body">
  <blockquote class="blockquote mb-0">
      <p>
        {{comment.comment}}
      </p>
      <footer class="blockquote-footer text-white"><cite title="{{comment.user.name}}">{{comment.user.name}}</cite> on {{format_date comment.date}}</footer>
    </blockquote>
  </div>
</div>
{{/each}}
{{/if}}

<script src="/js/comment.js"></script>